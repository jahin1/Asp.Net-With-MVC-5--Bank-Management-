@model List<MVCRepository.BranchManager>
@{
    ViewBag.Title = "ManagerSalary";
    Layout = "~/Views/Shared/_mdlayout.cshtml";
}

<h2>Manager Salary Payment</h2>


    <table>
        <thead>
            <tr>
                <td>Complete Payment</td>
                <td>Name</td>
                <td>Branch</td>
                <td>Last Payment Date</td>
                <td>Salary</td>
            </tr>
        </thead>
        <tbody>
            @foreach (MVCRepository.BranchManager br in Model)
            {   
                <tr>
                    <td>
                        <form method="post">
                            <input type="hidden" name="Manager_Id" value="@br.Manager_Id" />
                            <input type="submit" value="Pay" />
                        </form>
                    </td>
                    <td>@br.Manager_Name</td>
                    <td>@br.Manager_branch</td>
                    <td>@br.Manager_LastPaymentDate</td>
                    <td>@br.Manager_Salary</td>
                    
                </tr>
            }
            <tr>
                <td></td>
            </tr>
        </tbody>
    </table>


