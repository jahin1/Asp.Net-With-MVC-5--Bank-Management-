            @Html.DisplayFor(modelItem => item.Loan_Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AmountTo_Pay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Interest_Rate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Loan_Amount_Paid)
